{
  "manifest_version": 3,
  "name": "AI Rewrite",
  "version": "0.1.0",
  "description": "Automatic prompt engineering and analysis for AI tasks.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "service.js",
    "type": "module"
  },
  "action": {
    "default_popup": "frontend/popup.html"
  },
  "options_page": "frontend/settings.html"

}
